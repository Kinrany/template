{
  "name": "template",
  "version": "0.1.0",
  "description": "Kinrany's frontend project template",
  "main": "public/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kinrany/template.git"
  },
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint-check": "prettier ./**/**.{js,jsx,ts,tsx,json,html} --check && eslint . --ext=js,jsx,ts,tsx",
    "lint-fix": "prettier ./**/**.{js,jsx,ts,tsx,json,html} --write && eslint . --ext=js,jsx,ts,tsx --fix",
    "//": "https://github.com/prettier/eslint-config-prettier#cli-helper-tool",
    "eslint-config-prettier-check": "eslint --print-config src/index.tsx | eslint-config-prettier-check",
    "test": "jest",
    "gh-pages-prepare": "git checkout gh-pages && cp -rf ./public/dist ./dist && git commit -am \"Automatically update gh-pages\" --allow-empty",
    "run-ci": "npm ci && npm run build && npm run test && npm run lint-check"
  },
  "author": "kinrany",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.10",
    "@types/react-dom": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^2.5.0",
    "@typescript-eslint/parser": "^2.5.0",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-typescript": "^6.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rollup": "^1.25.2",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^5.1.2",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^24.1.0",
    "tslib": "^1.10.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "react": "^16.11.0",
    "react-dom": "^16.11.0"
  }
}
